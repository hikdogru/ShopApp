@model ProductViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";

    var popularClass = Model.Products.Count > 1 ? "popular" : "";
    var products = Model.Products;
}


@section MessageBox
{
    <div class="alert alert-warning text-center m-0">
        You have a message!
    </div>
}

@section Header
{
    <partial name="_Header" /> @* Partial View kullanımının alternatifi *@
}


@* Products *@

@if (Model.Products.Count == 0)
{
    <partial name="_NoProduct" />
}
else
{

    <div class="row">
        @foreach (var product in products)
        {

            <div class="col-md-3">
                @await Html.PartialAsync("_Product", product)
            </div>
        }

    </div>
}


@section Scripts
{
