@model List<Category>
@* Product/List/2 *@
<div class="list-group">
    <a href="/Products" class="list-group-item list-group-item-action">All Categories</a>
    
     @foreach (var item in Model)
        {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="list-group-item
        list-group-item-action @(ViewBag.SelectedCategory == item.Url?"active":"")">@item.Name</a>
        } 
</div>