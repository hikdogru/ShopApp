@model IEnumerable<IdentityRole>


<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Role List</h1>
        <hr>
        <a href="/Admin/Role/Create" class="btn btn-primary btn-sm">
            Create Role
        </a>
        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Name</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var role in @Model)
                    {
                        <tr>

                            <td style="width: 250px;">@role.Id</td>
                            <td>@role.Name</td>
                            <td style="width: 160px;">
                                <a asp-controller="Admin" asp-action="RoleEdit" asp-route-id="@role.Id" class="btn btn-secondary btn-sm mr-2">Edit</a>
                                <form action="/Admin/Role/Delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="id" value="@role.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                                </form>

                            </td>

                        </tr>
                    }
                }

                else
                {
                    <partial name="_NoRole" />
                }


            </tbody>
        </table>

    </div>
</div>
